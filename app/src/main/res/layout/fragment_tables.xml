<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PairablePlayersFragment">

    <TextView
        android:id="@+id/tables_tv"
        style="@style/RegularLabelStyle"
        android:layout_centerHorizontal="true"
        android:text="@string/pair_tables_label" />

    <de.codecrafters.tableview.TableView
        android:id="@+id/tables_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tables_tv"
        android:layout_marginTop="@dimen/default_margin"
        app:tableView_columnCount="4"
        app:tableView_headerColor="@color/colorPrimary"
        app:tableView_headerElevation="10" />

</RelativeLayout>