<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_color_selector">

    <View
        android:id="@+id/badge_view"
        android:layout_width="@dimen/badge_width"
        android:layout_height="0dp"
        android:layout_alignBottom="@id/begin_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@id/full_name"
        android:layout_centerHorizontal="true"
        android:background="@color/badge_opened" />

    <TextView
        android:id="@+id/full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_toEndOf="@+id/badge_view"
        android:layout_toRightOf="@+id/badge_view"
        android:fontFamily="sans-serif-medium"
        android:paddingTop="@dimen/default_top_bottom_padding"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/item_list_text_size"
        tools:text="Full name" />

    <TextView
        android:id="@+id/begin_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/full_name"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_toEndOf="@+id/badge_view"
        android:layout_toRightOf="@+id/badge_view"
        android:paddingBottom="@dimen/default_top_bottom_padding"
        android:textStyle="italic"
        tools:text="2018 May 5" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/full_name"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_toEndOf="@+id/begin_date"
        android:layout_toRightOf="@+id/begin_date"
        android:paddingBottom="@dimen/default_top_bottom_padding"
        android:textStyle="italic"
        tools:text="Location" />


</RelativeLayout>